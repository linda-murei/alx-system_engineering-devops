#!/bin/bash

# Update package lists and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Obtain the hostname of the server
hostname=$(hostname)

# Create a new configuration file for the custom header
sudo bash -c 'cat > /etc/nginx/conf.d/custom_headers.conf' <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    # Other server configuration directives...

    # Custom header configuration
    location / {
        add_header X-Served-By "$hostname";
        # Other directives if any...
    }
}
EOF

# Restart Nginx to apply the changes
sudo systemctl restart nginx

